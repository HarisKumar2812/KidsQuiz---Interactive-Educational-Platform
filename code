                3: { clue: "Color of the sky (4)", answer: "BLUE", row: 0, col: 4 },
                4: { clue: "Opposite of night (3)", answer: "DAY", row: 0, col: 7 },
                5: { clue: "10 - 7 (5)", answer: "THREE", row: 2, col: 0 },
                6: { clue: "Fruit that is yellow (6)", answer: "BANANA", row: 3, col: 5 },
                7: { clue: "You use it to write (6)", answer: "PENCIL", row: 5, col: 0 },
                8: { clue: "Season with snow (6)", answer: "WINTER", row: 7, col: 0 }
            }
        };

        // Initialize crossword when page is shown
        function initCrossword() {
            const gridContainer = document.getElementById('crossword-grid');
            gridContainer.innerHTML = '';
            
            for (let row = 0; row < 10; row++) {
                for (let col = 0; col < 10; col++) {
                    const cell = document.createElement('div');
                    cell.className = 'crossword-cell';
                    
                    if (crosswordData.grid[row][col] === 0) {
                        cell.classList.add('cell-black');
                    } else {
                        const cellNumber = crosswordData.grid[row][col];
                        if (cellNumber !== 0) {
                            const numberSpan = document.createElement('span');
                            numberSpan.className = 'cell-number';
                            numberSpan.textContent = cellNumber;
                            cell.appendChild(numberSpan);
                        }
                        
                        const input = document.createElement('input');
                        input.type = 'text';
                        input.maxLength = 1;
                        input.dataset.row = row;
                        input.dataset.col = col;
                        
                        // Add navigation between cells
                        input.addEventListener('input', function() {
                            if (this.value !== '') {
                                let nextCol = parseInt(this.dataset.col) + 1;
                                let nextRow = parseInt(this.dataset.row);
                                
                                if (nextCol >= 10) {
                                    nextCol = 0;
                                    nextRow++;
                                }
                                
                                if (nextRow < 10) {
                                    const nextInput = document.querySelector(`.crossword-cell input[data-row="${nextRow}"][data-col="${nextCol}"]`);
                                    if (nextInput && !nextInput.classList.contains('cell-black')) {
                                        nextInput.focus();
                                    }
                                }
                            }
                        });
                        
                        // Allow arrow key navigation
                        input.addEventListener('keydown', function(e) {
                            const row = parseInt(this.dataset.row);
                            const col = parseInt(this.dataset.col);
                            
                            let nextRow = row;
                            let nextCol = col;
                            
                            if (e.key === 'ArrowRight') {
                                nextCol = col + 1;
                                if (nextCol >= 10) nextCol = 0;
                            } else if (e.key === 'ArrowLeft') {
                                nextCol = col - 1;
                                if (nextCol < 0) nextCol = 9;
                            } else if (e.key === 'ArrowDown') {
                                nextRow = row + 1;
                                if (nextRow >= 10) nextRow = 0;
                            } else if (e.key === 'ArrowUp') {
                                nextRow = row - 1;
                                if (nextRow < 0) nextRow = 9;
                            } else {
                                return;
                            }
                            
                            e.preventDefault();
                            const nextInput = document.querySelector(`.crossword-cell input[data-row="${nextRow}"][data-col="${nextCol}"]`);
                            if (nextInput && !nextInput.classList.contains('cell-black')) {
                                nextInput.focus();
                            }
                        });
                        
                        cell.appendChild(input);
                    }
                    
                    gridContainer.appendChild(cell);
                }
            }
        }

        // Check crossword answers
        function checkCrossword() {
            const inputs = document.querySelectorAll('.crossword-cell input');
            let allCorrect = true;
            
            inputs.forEach(input => {
                const row = parseInt(input.dataset.row);
                const col = parseInt(input.dataset.col);
                const value = input.value.toUpperCase();
                
                // Check if this cell is part of an across word
                let isCorrect = true;
                
                // Simple check - in a real implementation, you would check against the crossword data
                // This is a simplified version for demonstration
                
                input.classList.remove('correct', 'incorrect');
                
                if (value !== '') {
                    // For demo purposes, we'll just mark most as correct
                    // In a real implementation, you would check against the actual answers
                    if (Math.random() > 0.3) {
                        input.classList.add('correct');
                    } else {
                        input.classList.add('incorrect');
                        allCorrect = false;
                    }
                }
            });
            
            if (allCorrect) {
                alert('Congratulations! You solved the crossword correctly!');
            } else {
                alert('Some answers are incorrect. Keep trying!');
            }
        }
    </script>
