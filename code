        // Global variables
        let currentSubject = '';
        let currentQuestionIndex = 0;
        let userAnswers = [];
        let quizTime = 0;
        let timerInterval = null;
        let timeLeft = 0;

        // Function to show the selected page and hide others
        function showPage(pageId) {
            // Hide all pages
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            
            // Show the selected page
            document.getElementById(pageId).classList.add('active');
            
            // Scroll to top
            window.scrollTo(0, 0);
            
            // If showing quiz page, initialize quiz
            if (pageId === 'quiz') {
                initializeQuiz();
            }
            
            // If showing crossword page, initialize crossword
            if (pageId === 'crossword') {
                initCrossword();
            }
        }

        // Function to select a subject
        function selectSubject(subject) {
            currentSubject = subject;
            showPage('time-selection');
        }

        // Function to start the quiz with selected time
        function startQuiz(minutes) {
            quizTime = minutes * 60; // Convert to seconds
            timeLeft = quizTime;
            currentQuestionIndex = 0;
            userAnswers = new Array(25).fill(-1); // Initialize with -1 for unanswered
            
            showPage('quiz');
            updateTimerDisplay();
            
            // Start the timer
            if (timerInterval) clearInterval(timerInterval);
            timerInterval = setInterval(updateTimer, 1000);
        }

        // Function to update the timer
        function updateTimer() {
            timeLeft--;
            updateTimerDisplay();
            
            if (timeLeft <= 0) {
                clearInterval(timerInterval);
                showTimeUp();
            }
        }

        // Function to update timer display
        function updateTimerDisplay() {
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            document.getElementById('time-left').textContent = 
                `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        }

        // Function to initialize the quiz
        function initializeQuiz() {
            displayQuestion();
            updateProgress();
        }

        // Function to display the current question
        function displayQuestion() {
            const questionData = quizData[currentSubject][currentQuestionIndex];
            document.getElementById('question-text').textContent = questionData.question;
            
            const optionsContainer = document.getElementById('options-container');
            optionsContainer.innerHTML = '';
            
            questionData.options.forEach((option, index) => {
                const optionElement = document.createElement('div');
                optionElement.className = 'option';
                if (userAnswers[currentQuestionIndex] === index) {
                    optionElement.classList.add('selected');
                }
                optionElement.textContent = option;
                optionElement.addEventListener('click', () => selectOption(index));
                optionsContainer.appendChild(optionElement);
            });
            
            document.getElementById('current-question').textContent = currentQuestionIndex + 1;
            
            // Show/hide back button
            document.getElementById('back-button').style.visibility = 
                currentQuestionIndex > 0 ? 'visible' : 'hidden';
        }

        // Function to select an option
        function selectOption(optionIndex) {
            userAnswers[currentQuestionIndex] = optionIndex;
            
            // Update UI to show selected option
            const options = document.querySelectorAll('.option');
            options.forEach((option, index) => {
                if (index === optionIndex) {
                    option.classList.add('selected');
                } else {
                    option.classList.remove('selected');
                }
            });
        }

        // Function to go to the next question
        function nextQuestion() {
            if (currentQuestionIndex < 24) {
                currentQuestionIndex++;
                displayQuestion();
                updateProgress();
            } else {
                // If it's the last question, finish the quiz
                finishQuiz();
            }
        }

        // Function to go to the previous question
        function previousQuestion() {
            if (currentQuestionIndex > 0) {
                currentQuestionIndex--;
                displayQuestion();
                updateProgress();
            }
        }

        // Function to update progress
        function updateProgress() {
            // This can be used to update a progress bar if needed
        }

        // Function to finish the quiz and show results
        function finishQuiz() {
            clearInterval(timerInterval);
            
            // Calculate score
            let score = 0;
            for (let i = 0; i < 25; i++) {
                if (userAnswers[i] === quizData[currentSubject][i].answer) {
                    score++;
                }
            }
            
            // Display score
            document.getElementById('final-score').textContent = score;
            
            // Calculate star rating (1-5 stars)
            const stars = Math.ceil(score / 5);
            const starsContainer = document.getElementById('star-rating');
            starsContainer.innerHTML = '';
            
            for (let i = 0; i < stars; i++) {
                const star = document.createElement('i');
                star.className = 'fas fa-star';
                starsContainer.appendChild(star);
            }
            
            // Set result message based on score
            const resultMessage = document.getElementById('result-message');
            if (score >= 20) {
                resultMessage.textContent = 'Excellent! You\'re a superstar!';
            } else if (score >= 15) {
                resultMessage.textContent = 'Great job! You know your stuff!';
            } else if (score >= 10) {
                resultMessage.textContent = 'Good effort! Keep practicing!';
            } else {
                resultMessage.textContent = 'Nice try! You\'ll do better next time!';
            }
            
            showPage('results');
        }

        // Function to show time's up page
        function showTimeUp() {
            // Calculate score
            let score = 0;
            for (let i = 0; i < 25; i++) {
                if (userAnswers[i] === quizData[currentSubject][i].answer) {
                    score++;
                }
            }
            
            document.getElementById('timeup-score').textContent = score;
            showPage('timeup');
        }

        // Function to show exit modal
        function showExitModal() {
            document.getElementById('exit-modal').style.display = 'flex';
        }

        // Function to hide exit modal
        function hideExitModal() {
            document.getElementById('exit-modal').style.display = 'none';
        }

        // Function to exit quiz
        function exitQuiz() {
            clearInterval(timerInterval);
            hideExitModal();
            showPage('subjects');
        }

        // Crossword data and functionality
        const crosswordData = {
